# ============================================================
# MyBot Configuration — copy this to .env and fill in values
# ============================================================

# --- AI Provider (choose one or more, bot picks best available) ---
ANTHROPIC_API_KEY=             # Claude (Anthropic)
OPENAI_API_KEY=                # GPT-4 (OpenAI)
OPENROUTER_API_KEY=            # OpenRouter (access 100+ models)
GOOGLE_API_KEY=                # Gemini (Google)

# Default model (e.g. anthropic/claude-opus-4-5, openai/gpt-4o, google/gemini-pro)
DEFAULT_MODEL=anthropic/claude-opus-4-5

# --- Telegram ---
TELEGRAM_BOT_TOKEN=            # Get from @BotFather
TELEGRAM_ALLOWED_USER_IDS=     # Comma-separated user IDs (get from @userinfobot)

# --- WhatsApp ---
# No token needed — you scan a QR code to link your device
WHATSAPP_ALLOWED_NUMBERS=      # Comma-separated numbers with country code: +1234567890,+9876543210

# --- Security ---
# Allowlist mode: "strict" (only listed users) | "pairing" (pairing code required)
DM_POLICY=strict
PAIRING_CODE_LENGTH=6

# --- Container Security ---
CONTAINER_RUNTIME=docker       # "docker" (WSL2/Linux) | "none" (disable sandboxing)
CONTAINER_IMAGE=mybot-sandbox  # Docker image for agent sandbox
CONTAINER_MEMORY_LIMIT=512m    # Memory limit per container
CONTAINER_CPU_LIMIT=0.5        # CPU limit per container
SANDBOX_WORKSPACE=/tmp/mybot-sandbox  # Host path mounted into container

# --- Features ---
ENABLE_WEB_SEARCH=true
BRAVE_SEARCH_API_KEY=          # Get from https://brave.com/search/api/ (free tier available)

# --- Database ---
DB_PATH=~/.mybot/mybot.db      # SQLite database path

# --- Logging ---
LOG_LEVEL=info                 # debug | info | warn | error
LOG_FILE=~/.mybot/logs/mybot.log

# --- Gateway ---
GATEWAY_PORT=18788
TRIGGER_WORD=@bot              # Word that activates bot in groups
